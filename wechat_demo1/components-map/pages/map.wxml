<view>地图</view>
<view class='container'>
  <view class='page-body'>
    <view class='page-section page-section-gap'>
      <map
        style='width: 100%; height: 300px'
        latitude='{{latitude}}'
        longitude='{{longitude}}'
        markers='{{markers}}'
        covers='{{covers}}'
        controls='{{controls}}'
        scale='{{scale}}'
        bindcontroltap='tapControl'
        bindregionchange='regionChange'
      >
      </map>
    </view>
  </view>
</view>