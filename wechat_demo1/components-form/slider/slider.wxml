<view class='title'>slider滑动选择器</view>

<view class='page-body'>
  <view class='page-section page-section-gap'>
    <view class='page-section-title'>设置step</view>
    <view class='body-view'>
      <slider value='60' bindchange='slider2change' step='50'
        block-size='12'
        selected-color='blue'
        backgroundColor='red' />
    </view>
  </view>

  <view class='page-section page-section-gap'>
    <view class='page-section-title'>显示当前的value</view>
    <view class='body-view'>
      <slider value='50' bindchange='slider3chnage' show-value />
    </view>
  </view>

  <view class='page-section page-section-gap'>
    <view class='page-section-title'>设置最小/最大值</view>
    <view class='body-view'>
      <slider value='100' bindchange='slider4change' min='50' max='200' show-value />
    </view>
  </view>

</view>